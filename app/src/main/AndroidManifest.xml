<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.example.project_ad"
	>

	<uses-permission android:name="android.permission.INTERNET"/>

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/Theme.ProjectAD">

		<activity android:name=".activities.MainActivity" android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".activities.ChoiceActivity" android:screenOrientation="portrait"/>
		<activity android:name=".activities.SpellingChoiceActivity" android:screenOrientation="portrait"/>
		<activity android:name=".activities.EasySpellingActivity" android:screenOrientation="portrait"/>
		<activity android:name=".activities.ToFChoiceActivity" android:screenOrientation="portrait"/>
		<activity android:name=".activities.EasyTofActivity" android:screenOrientation="portrait"/>
		<activity android:name=".activities.ScoresActivity" android:screenOrientation="portrait"/>
		<activity android:name=".activities.TaskResultActivity" android:screenOrientation="portrait" />
		<activity android:name=".activities.SettingsActivity" android:screenOrientation="portrait" />
	</application>

</manifest>