<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">
    <TextView
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/big_textview_size"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:text="Настройки">

    </TextView>
    <TextView
        android:layout_gravity="center"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Задания">

    </TextView>
    <LinearLayout
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Обновлено">

            </TextView>
            <TextView
                android:id="@+id/update_date_textview"
                android:layout_weight="1"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:background="@color/back_color"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="20.01.2020">

            </TextView>
            <Button
                android:layout_weight="1"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:id="@+id/update_button"
                android:textAlignment="center"
                android:backgroundTint="@color/btn_color"
                android:text="Обновить"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Button>

    </LinearLayout>


    <Button
        android:id="@+id/cancel_sett_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/btn_color"
        android:layout_marginTop="20sp"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:text="Назад"
        android:textSize="@dimen/small_button_text"
        android:textStyle=""
        />


</LinearLayout>